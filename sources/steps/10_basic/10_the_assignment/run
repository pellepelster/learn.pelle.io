#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
set -eux

prefix=$(realpath "${DIR}/../../")
STEP_DIR=${DIR#${prefix}/}

ARTEFACTS_DIR="${ARTEFACTS_DIR:-}"
TODO_PROJECT_DIR="${TODO_PROJECT_DIR:-}"

for var in "${TODO_PROJECT_DIR}" \
  "${ARTEFACTS_DIR}" ; do
  if [ -z "$var" ] ; then
    echo "Environment variable missing"
    exit 1
  fi
done

function task_test {
  (
    cd ${ARTEFACTS_DIR}/${STEP_DIR}/todo-server
    ./gradlew idea eclipse build
  )
}

function task_generate {
  echo "generating ${STEP_DIR}"
  mkdir -p ${ARTEFACTS_DIR}/${STEP_DIR}
  (
    cd ${TODO_PROJECT_DIR}
    rsync -av --progress . ${ARTEFACTS_DIR}/${STEP_DIR} --exclude build.gradle --exclude .gradle --exclude settings.gradle --exclude FrontendContent.java  --exclude node_modules --exclude .idea --exclude build --exclude out
  )
  (
    cd ${DIR}
    rsync -av --progress . ${ARTEFACTS_DIR}/${STEP_DIR} --exclude run
    cd ${ARTEFACTS_DIR}/${STEP_DIR}
    mv -f gradlew* todo-server
    rm -rf todo-server/gradle
    mv -f gradle todo-server/gradle

  )
}

CMD=${1:-}
shift || true
case ${CMD} in
  test) task_test ;;
  generate) task_generate ;;
esac
